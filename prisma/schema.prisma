// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
  // followers Follows[] @relation("following")
  // following Follows[] @relation("follower")
}

model Profile {
  id         Int       @id @default(autoincrement())
  userId     Int       @unique
  firstName  String    @db.VarChar(30)
  lastName   String    @db.VarChar(30)
  image      String?   @db.VarChar(1000)
  createdAt  DateTime  @default(now())
  isVerified Boolean   @default(false)
  followers  Profile[] @relation("following", references: [id])
  following  Profile[] @relation("follower", references: [id])
  Profile    Profile?  @relation(fields: [profileId], references: [id])
  profileId  Int?
  Profile    Profile?  @relation(fields: [profileId], references: [id])
  profileId  Int?
  Follows    Follows[]
  Follows    Follows[]
}

model Follows {
  follower    Profile @relation("follower", fields: [profileId], references: [id])
  followerId  Int
  following   Profile @relation("following", fields: [profileId], references: [id])
  followingId Int
  profileId   Int
  profileId   Int

  @@id([followerId, followingId])
}
